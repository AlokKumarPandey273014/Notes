Que- Create a class named Student with properties: Name, Age, and RollNo. Display the studentâ€™s details.
using System;

class Student
{
    public string Name;
    public int Age;
    public int RollNo;

    public void DisplayDetails()
    {
        Console.WriteLine("Name: " + Name);
        Console.WriteLine("Age: " + Age);
        Console.WriteLine("Roll No: " + RollNo);
    }
}


class Program
{
    static void Main()
    {
        Student s = new Student();
        s.Name = "John";
        s.Age = 20;
        s.RollNo = 101;
        s.DisplayDetails();
    }
}




