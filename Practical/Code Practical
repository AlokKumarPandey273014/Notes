Que- Create a static class with static methods and Show its usage in a program.

using System;
	
static class MathOperations
{
    public static int Square(int number)
    {
        return number * number;
    }

    public static int Cube(int number)
    {
        return number * number * number;
    }
}

class Program
{
    static void Main()
    {
        Console.WriteLine("Square of 4: " + MathOperations.Square(4));
        Console.WriteLine("Cube of 3: " + MathOperations.Cube(3));
    }
}



